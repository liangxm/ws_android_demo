<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff" >
    
    <LinearLayout 
        android:id="@+id/item_icon"
        android:layout_width="wrap_content"
        android:layout_height="60.0dip">
        <com.lxm.pwhelp.custom.CircleImageView
            android:id="@+id/item_logo"
            android:layout_width="44.0dip"
            android:layout_height="44.0dip"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="8.0dip"
            android:src="@drawable/source_image"/>
    </LinearLayout>
 
    <TextView
        android:id="@+id/one_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_icon"
        android:layout_marginLeft="15.0dip"
        android:layout_toRightOf="@id/item_icon"
        android:textColor="#ff040404"
        android:textSize="15.0dip"
        android:textStyle="bold"
        android:typeface="sans"/>
    <TextView 
        android:id="@+id/two_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one_textview"
        android:layout_marginLeft="15.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_toRightOf="@id/item_icon"
        android:textColor="#ff343434"
        android:textSize="10.0dip"/>
    <TextView 
        android:id="@+id/three_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two_textview"
        android:layout_marginLeft="15.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_toRightOf="@id/item_icon"
        android:textColor="#ff343434"
        android:textSize="10.0dip"/>
</RelativeLayout>