<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	<include layout="@layout/add_top_layout" />
	<ScrollView android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:fadingEdge="vertical"
	    android:scrollbars="vertical" >
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_margin="10dip"
	        android:background="@drawable/layout_background" >
	
	        <LinearLayout
	            android:id="@+id/item1"
	            android:layout_width="fill_parent"
	            android:layout_height="40.0dip"
	            android:layout_marginTop="8.0dip"
	            android:gravity="center_vertical">
	
	            <TextView
	                android:id="@+id/text_name"
	                android:layout_width="fill_parent"
	                android:layout_height="30dip"
	                android:layout_weight="9"
	                android:layout_marginLeft="6dip"
	                android:text="@string/text_name"
	                android:textColor="#606366"
	                android:textSize="18sp" />
	
	            <EditText
	                android:id="@+id/edit_name"
	                android:layout_width="fill_parent"
	                android:layout_height="30dip"
	                android:layout_weight="3"
	                android:layout_marginRight="6dip"
	                android:background="@drawable/rounded_edittext"
	                android:hint="" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/item2"
	            android:layout_width="fill_parent"
	            android:layout_height="40.0dip"
	            android:layout_marginTop="8.0dip"
	            android:gravity="center_vertical" >
	
	            <TextView
	                android:id="@+id/text_username"
	                android:layout_width="fill_parent"
	                android:layout_height="30dip"
	                android:layout_weight="9"
	                android:layout_marginLeft="6dip"
	                android:text="@string/text_username"
	                android:textColor="#606366"
	                android:textSize="18sp" />
	
	            <EditText
	                android:id="@+id/edit_username"
	                android:layout_width="fill_parent"
	                android:layout_height="30dip"
	                android:layout_weight="3"
	                android:layout_marginRight="6dip"
	                android:background="@drawable/rounded_edittext"
	                android:hint="" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/item3"
	            android:layout_width="fill_parent"
	            android:layout_height="40.0dip"
	            android:layout_marginTop="8.0dip"
	            android:orientation="horizontal" >
	
	            <TextView
	                android:id="@+id/text_password"
	                android:layout_width="fill_parent"
	                android:layout_height="30dip"
	                android:layout_weight="9"
	                 android:layout_marginLeft="6dip"
	                android:text="@string/text_password"
	                android:textColor="#606366"
	                android:textSize="18sp" />
	
	            <EditText
	                android:id="@+id/edit_password"
	                android:inputType="textPassword"
	                android:layout_width="fill_parent"
	                android:layout_height="30dip"
	                android:layout_weight="3"
	                android:layout_marginRight="6dip"
	                android:background="@drawable/rounded_edittext"
	                android:hint="" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/item4"
	            android:layout_width="fill_parent"
	            android:layout_height="40.0dip"
	            android:layout_marginTop="8.0dip"
	            android:orientation="horizontal" >
	
	            <TextView
	                android:id="@+id/text_type"
	                android:layout_width="fill_parent"
	                android:layout_height="30dip"
	                android:layout_weight="9"
	                 android:layout_marginLeft="6dip"
	                android:text="@string/text_type"
	                android:textColor="#606366"
	                android:textSize="18sp" />
	
	            <Spinner
	                android:id="@+id/edit_type"
	                android:layout_width="fill_parent"
	                android:layout_height="30dip"
	                android:layout_marginRight="6dip"
	                android:layout_weight="3"
	                android:spinnerMode="dropdown"
	                android:background="@drawable/rounded_edittext"/>
	
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/item5"
	            android:layout_width="fill_parent"
	            android:layout_height="40.0dip"
	            android:layout_marginTop="8.0dip"
	            android:orientation="horizontal" >
	
	            <TextView
	                android:id="@+id/text_url"
	                android:layout_width="fill_parent"
	                android:layout_height="30dip"
	                android:layout_weight="9"
	                android:layout_marginLeft="6dip"
	                android:text="@string/text_url"
	                android:textColor="#606366"
	                android:textSize="18sp" />
	
	            <EditText
	                android:id="@+id/edit_url"
	                android:inputType="textUri"
	                android:layout_width="fill_parent"
	                android:layout_height="30dip"
	                android:layout_weight="3"
	                android:layout_marginRight="6dip"
	                android:background="@drawable/rounded_edittext"
	                android:hint="" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/item6"
	            android:layout_width="fill_parent"
	            android:layout_height="40.0dip"
	            android:layout_marginTop="8.0dip"
	            android:orientation="horizontal" >
	
	            <TextView
	                android:id="@+id/text_comment"
	                android:layout_width="fill_parent"
	                android:layout_height="30dip"
	                android:layout_weight="9"
	                android:layout_marginLeft="6dip"
	                android:text="@string/text_comment"
	                android:textColor="#606366"
	                android:textSize="18sp" />
	
	            <EditText
	                android:id="@+id/edit_comment"
	                android:layout_width="fill_parent"
	                android:layout_height="30dip"
	                android:layout_weight="3"
	                android:layout_marginRight="6dip"
	                android:background="@drawable/rounded_edittext"
	                android:hint="" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/item7"
	            android:layout_width="fill_parent"
	            android:layout_height="40.0dip"
	            android:layout_marginTop="8.0dip"
	            android:orientation="horizontal" >
	
	            <TextView
	                android:id="@+id/text_question1"
	                android:layout_width="fill_parent"
	                android:layout_height="30dip"
	                android:layout_weight="9"
	                android:layout_marginLeft="6dip"
	                android:text="@string/text_question1"
	                android:textColor="#606366"
	                android:textSize="18sp" />
	
	            <EditText
	                android:id="@+id/edit_question1"
	                android:layout_width="fill_parent"
	                android:layout_height="30dip"
	                android:layout_weight="3"
	                android:layout_marginRight="6dip"
	                android:background="@drawable/rounded_edittext"
	                android:hint="" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/item8"
	            android:layout_width="fill_parent"
	            android:layout_height="40.0dip"
	            android:layout_marginTop="8.0dip"
	            android:orientation="horizontal" >
	
	            <TextView
	                android:id="@+id/text_question2"
	                android:layout_width="fill_parent"
	                android:layout_height="30dip"
	                android:layout_weight="9"
	                android:layout_marginLeft="6dip"
	                android:text="@string/text_question2"
	                android:textColor="#606366"
	                android:textSize="18sp" />
	
	            <EditText
	                android:id="@+id/edit_question2"
	                android:layout_width="fill_parent"
	                android:layout_height="30dip"
	                android:layout_weight="3"
	                android:layout_marginRight="6dip"
	                android:background="@drawable/rounded_edittext"
	                android:hint="" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="40dip"
	            android:gravity="center"
	            android:layout_marginBottom="10dip" >
	            <Button
	                android:id="@+id/Dlg_Return"
	                android:layout_width="110dip"
	                android:layout_height="wrap_content"
	                android:text="@string/back"
	                android:textColor="#FFFFFF"
	                android:textSize="16sp"
	                android:background="@drawable/rounded_button" />
	
	            <Button
	                android:id="@+id/Dlg_Submit"
	                android:layout_width="110dip"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:text="@string/submit"
	                android:textColor="#FFFFFF"
	                android:textSize="16sp"
	                android:background="@drawable/rounded_button" />
	        </LinearLayout>
	    </LinearLayout>
	</ScrollView>
</LinearLayout>