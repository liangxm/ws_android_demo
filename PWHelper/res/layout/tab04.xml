<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/manage"
        android:layout_width="fill_parent"
        android:layout_height="80.0dip"
        android:layout_marginTop="8.0dip"
        android:background="@drawable/layout_selecter"
        android:clickable="true" >

        <ImageView
            android:id="@+id/personal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15.0dip"
            android:src="@drawable/top_user" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginTop="14.0dip"
            android:background="#ffffffff"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:text="Selina"
                android:textColor="#ff787878"
                android:textSize="18.0dip" />

            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="15.0dip"
                android:text="账号: 18221589205"
                android:textColor="#ff787878"
                android:textSize="18.0dip" />
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/recovery"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginTop="8.0dip"
        android:gravity="center_vertical"
        android:background="@drawable/layout_selecter"
        android:clickable="true" >
        
        <ImageView
            android:id="@+id/recovery_icon"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15.0dip"
            android:src="@drawable/recovery_icon" />
        
        <TextView
                android:id="@+id/recovery_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:text="@string/recovery_label"
                android:textColor="#ff787878"
                android:textSize="18.0dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cloud"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginTop="8.0dip"
        android:gravity="center_vertical"
        android:background="@drawable/layout_selecter"
        android:clickable="true" >
        
        <ImageView
            android:id="@+id/cloud_icon"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15.0dip"
            android:src="@drawable/cloud_icon" />
        <TextView
                android:id="@+id/cloud_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:text="@string/cloud_label"
                android:textColor="#ff787878"
                android:textSize="18.0dip" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/settings"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginTop="8.0dip"
        android:gravity="center_vertical"
        android:background="@drawable/layout_selecter"
        android:clickable="true" >
        <ImageView
            android:id="@+id/settings_icon"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15.0dip"
            android:src="@drawable/setting_icon" />
        <TextView
                android:id="@+id/setttings_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:text="@string/settting_label"
                android:textColor="#ff787878"
                android:textSize="18.0dip" />
    </LinearLayout>

</LinearLayout>